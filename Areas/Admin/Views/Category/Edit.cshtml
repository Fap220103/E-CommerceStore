@using ShoppingOnline.Areas.Admin.Models;
@model EditCategoryViewModel
@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category/add" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- /.content -->
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới danh mục</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                  <form method="post" asp-action="edit">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label asp-for="Title">Tên danh mục</label>
                            <input asp-for="Title" class="form-control" placeholder="Tên danh mục" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Alias">Alias</label>
                            <input asp-for="Alias" class="form-control" placeholder="Alias" />
                            <span asp-validation-for="Alias" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Link">Link</label>
                            <input asp-for="Link" class="form-control" placeholder="Link" />
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Mô tả</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="Position">Thứ tự</label>
                            <input asp-for="Position" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="SeoTitle">Seo title</label>
                            <textarea asp-for="SeoTitle" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="SeoDescription">Seo Description</label>
                            <textarea asp-for="SeoDescription" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="SeoKeywords">SeoKeywords</label>
                            <textarea asp-for="SeoKeywords" class="form-control"></textarea>
                        </div>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-danger">Quay lại</a>

                        <button type="submit" class="btn btn-primary">Sửa</button>
                    </div>
                  </form>  
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>

    <!-- /.card -->

</section>
<!-- /.content -->