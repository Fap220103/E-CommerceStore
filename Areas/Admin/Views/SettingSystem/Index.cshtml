@using ShoppingOnline.Areas.Admin.Models;
@model SettingSystemViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/settingsystem" class="nav-link">Setting System</a>
        </li>

    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Setting System</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Setting System</a></li>

                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- /.content -->
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Setting System</h3>

        </div>
        <div class="card-body">
            <div id="load_page"></div>
			<form id="yourFormId" method="post" action="AddSetting" enctype="multipart/form-data">
				<div class="row">
					<div class="col-md-12">
						<!-- your steps content here -->
						<div class="card">
							<div class="card-header p-2">
								<ul class="nav nav-pills">
									<li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
									<li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">SEO</a></li>
								</ul>
							</div><!-- /.card-header -->

							<div class="card-body">
								<div class="tab-content">
									<div class="active tab-pane" id="activity">
										<div class="form-group">
											<label asp-for="SettingTitle">Tiêu đề trang</label>
											<input type="text" asp-for="SettingTitle" class="form-control" value="@ViewBag.SettingTitle" />
										</div>
										<div class="form-group">
											<label asp-for="SettingLogo">Logo</label>
											<div class="input-group">
												<img src="@Url.Content(ViewBag.SettingLogo)" alt="Hình ảnh hiện tại" style="max-width: 200px; height: auto;" id="output" />
												<input asp-for="SettingLogo" type="file" class="form-control" placeholder="Logo" value="@ViewBag.SettingLogo" onchange="loadFile(event)" />
												<span asp-validation-for="SettingLogo" class="text-danger"></span>
											</div>
										</div>
										<div class="form-group">
											<label asp-for="SettingHotline">Hotline</label>
											<input type="text" asp-for="SettingHotline" class="form-control" value="@ViewBag.SettingHotline" />
										</div>
										<div class="form-group">
											<label asp-for="SettingEmail">Email</label>
											<input type="text" asp-for="SettingEmail" class="form-control" value="@ViewBag.SettingEmail" />
										</div>
									</div><!-- /.tab-pane -->

									<div class="tab-pane" id="settings">
										<div class="form-group">
											<label asp-for="SettingTitleSeo">Tiêu đề Seo</label>
											<input type="text" asp-for="SettingTitleSeo" class="form-control" value="@ViewBag.SettingTitleSeo" />
										</div>
										<div class="form-group">
											<label asp-for="SettingDesSeo">Mô tả Seo</label>
											<input type="text" asp-for="SettingDesSeo" class="form-control" value="@ViewBag.SettingDesSeo" />
										</div>
										<div class="form-group">
											<label asp-for="SettingKeySeo">Từ khóa Seo</label>
											<input type="text" asp-for="SettingKeySeo" class="form-control" value="@ViewBag.SettingKeySeo" />
										</div>
									</div><!-- /.tab-pane -->
								</div><!-- /.tab-content -->
							</div><!-- /.card-body -->
							<div class="form-group">
								<button type="submit" class="btn btn-primary btnSave">Lưu</button>
							</div>
						</div>
					</div>
				</div>
			</form>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>

    <!-- /.card -->

</section>

@section scripts{
	<script>
		var loadFile = function (event) {
			var image = document.getElementById("output");
			image.src = URL.createObjectURL(event.target.files[0]);
		};
	</script>
}