@model AppUser
<h2>Hồ sơ của tôi</h2>
<span>Quản lý thông tin hồ sơ để bảo mật tài khoản</span>
<form asp-action="ChangeProfile" asp-controller="Account" method="post" enctype="multipart/form-data"
	  data-ajax="true"
	  data-ajax-method="POST"
	  data-ajax-begin="OnBeginCP"
	  data-ajax-success="OnSuccessCP"
	  data-ajax-failure="OnFailureCP">
	<input asp-for="@Model.Id" hidden />
	<hr />
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<div class="form-group">
					<label asp-for="UserName"></label>
					<input asp-for="UserName" class="form-control" />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Email"></label>
					<input asp-for="Email" readonly class="form-control" />
					<input asp-for="Email" hidden />
				</div>
				<div class="form-group">
					<label asp-for="PhoneNumber"></label>
					<input asp-for="PhoneNumber" class="form-control" />
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-outline-success" style="margin-top:15px" id="btnSubmit">Update</button>
				</div>
				<div id="loading" class="loading-spinner" style="display:none;"></div>
			</div>

			<div class="col-md-1 d-flex justify-content-center">
				<div class="vertical-line" style="border-left: 1px solid #333; height: 100%;"></div>
			</div>

			<div class="col-md-4">
				<div class="card-body-right">
					<div class="d-flex flex-column align-items-center text-center">
						@if(Model.Image == null)
						{
							<img src="~/Content/img/SanPham/h0.png" id="output" alt="Customer"
							class="rounded-circle p-1 no-border" width="80" height="80">
						}
						else
						{
							<img src="@Model.Image" id="output" alt="Customer"
								 class="rounded-circle p-1 no-border" width="80" height="80">
						}

						<div class="mt-3">
							<p><label for="Image" style="cursor:pointer;">Chọn ảnh</label></p>
							<input asp-for="Image" type="file" style="display:none;" onchange="loadFile(event)" />
							<p class="mb-0">Dung lượng tối đa 1 MB </p>
							<p class="mb-0">Định dạng:.JPEG, .PNG</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
