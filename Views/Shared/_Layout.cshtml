	<script>
		function OnBeginSub() {
			$('#loading').show();
		}
		function OnSuccessSub(rs) {
			$('#loading').hide();
			if (rs.success) {
				notyf.success("Đăng ký thành công");
			}
			else {
				notyf.error("Đăng ký thất bại");
			}
		}
		function OnFailureSub(rs) {

		}
	</script>
